<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lgadetsky.TicketSystem.mapper.DepartmentMapper">
    <resultMap type="com.lgadetsky.TicketSystem.model.entity.Department" id="departmentMap">
        <result property="id" column="ID"/>
        <result property="name" column="NAME"/>
    </resultMap>
    
    <insert id="insert"
            parameterType="com.lgadetsky.TicketSystem.model.entity.Department"
            useGeneratedKeys="true">
            
            <selectKey keyProperty="id"
                        resultType="int"
                        order="BEFORE">
                select nextval('dep_seq')
            </selectKey>
            insert into "department" (ID, NAME)
            values(#{id}, #{name});
     </insert>

     <select id="select"
            parameterType="int"
            resultMap="departmentMap">
        select * from "department" d
        where o.id = #{id};
     </select>
     
     <update id="update"
            parameterType="com.lgadetsky.TicketSystem.model.entity.Department">
        update "department" set
            name = #{name}
        where id = #{id};
     </update>

    <delete id="delete"
            parameterType="int">
        delete from "department"
        where id = #{id};
    </delete>

</mapper>